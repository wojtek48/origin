{$R *.dfm}

procedure TForm4.Button1Click(Sender: TObject);
begin
 UniTable1.Append;
 UniTable1.Fields[0].AsString:='kot';
 UniTable1.Fields[1].AsInteger:=10;
 UniTable1.Fields[2].AsInteger:=44;
 UniTable1.Fields[3].AsInteger:=28;
 UniTable1.Post;
end;

